<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="#FFFFFF"
        card_view:cardUseCompatPadding="true"
        app:contentPadding="@dimen/activity_horizontal_margin_small"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_weight="1"
                >
                <ImageView
                android:id="@+id/idCoinIC"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_btc172"
                    android:layout_gravity="center"
                    />
                </FrameLayout>
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                    android:layout_weight="6"
                    >
                <TextView
                android:id="@+id/idLongTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitcoin"
                android:textColor="@color/app_bar_header"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                <TextView
                android:id="@+id/idShortTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:textColor="@color/Black"/>

                    <TextView
                        android:id="@+id/idPriceTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="$ 2,055.00"
                        android:gravity="center"
                        />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/LightGrey"/>
                <TextView
                android:id="@+id/idPerTV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5.70%"
                    android:singleLine="true"
                    android:gravity="center|center_horizontal"
                    android:layout_weight="2"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LightGrey"/>
</LinearLayout>